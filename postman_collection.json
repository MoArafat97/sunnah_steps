    {
      "name": "Completions",
      "item": [
        {
          "name": "Create Completion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"habitId\": \"h21\",\n  \"source\": \"api\",\n  \"note\": \"Completed via API test\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/completions",
              "host": ["{{base_url}}"],
              "path": ["completions"]
            }
          }
        },
        {
          "name": "Get User Completions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/completions/{{user_id}}?limit=20",
              "host": ["{{base_url}}"],
              "path": ["completions", "{{user_id}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "habitId",
                  "value": "h21",
                  "disabled": true
                },
                {
                  "key": "startDate",
                  "value": "2024-01-01",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Completion Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/completions/{{user_id}}/stats?days=30",
              "host": ["{{base_url}}"],
              "path": ["completions", "{{user_id}}", "stats"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "GraphQL",
      "item": [
        {
          "name": "GraphQL - Get Habits",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query GetHabits($first: Int, $category: Category) {\\n    habits(first: $first, filter: { category: $category }) {\\n      edges {\\n        node {\\n          id\\n          title\\n          category\\n          priority\\n          tags\\n          hadithEnglish\\n          benefits\\n        }\\n        cursor\\n      }\\n      pageInfo {\\n        hasNextPage\\n        hasPreviousPage\\n        startCursor\\n        endCursor\\n      }\\n      totalCount\\n    }\\n  }\",\n  \"variables\": {\n    \"first\": 10,\n    \"category\": \"daily\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "GraphQL - Get Single Habit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query GetHabit($id: String!) {\\n    habit(id: $id) {\\n      id\\n      title\\n      hadithArabic\\n      hadithEnglish\\n      benefits\\n      tags\\n      category\\n      priority\\n      contextTags\\n      timeWindow {\\n        startHour\\n        endHour\\n        description\\n      }\\n      createdAt\\n    }\\n  }\",\n  \"variables\": {\n    \"id\": \"h21\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "GraphQL - Search Habits",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query SearchHabits($query: String!, $limit: Int) {\\n    searchHabits(query: $query, limit: $limit) {\\n      id\\n      title\\n      category\\n      priority\\n      tags\\n      benefits\\n    }\\n  }\",\n  \"variables\": {\n    \"query\": \"prayer\",\n    \"limit\": 5\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "GraphQL - Get Bundles",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query GetBundles($first: Int) {\\n    bundles(first: $first) {\\n      edges {\\n        node {\\n          id\\n          name\\n          description\\n          displayOrder\\n          habits {\\n            id\\n            title\\n            category\\n            priority\\n          }\\n        }\\n      }\\n      pageInfo {\\n        hasNextPage\\n      }\\n      totalCount\\n    }\\n  }\",\n  \"variables\": {\n    \"first\": 5\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "GraphQL - Create Completion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"mutation CreateCompletion($input: CreateCompletionInput!) {\\n    createCompletion(input: $input) {\\n      id\\n      habitId\\n      habit {\\n        title\\n        category\\n      }\\n      completedAt\\n      source\\n      note\\n    }\\n  }\",\n  \"variables\": {\n    \"input\": {\n      \"habitId\": \"h21\",\n      \"source\": \"api\",\n      \"note\": \"Completed after Fajr prayer\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "GraphQL - Get User Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query GetMe {\\n    me {\\n      uid\\n      displayName\\n      email\\n      role\\n      locale\\n      createdAt\\n    }\\n  }\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "GraphQL Mutation - Create Completion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"mutation CreateCompletion($input: CreateCompletionInput!) {\\n    createCompletion(input: $input) {\\n      id\\n      habitId\\n      completedAt\\n      source\\n      note\\n    }\\n  }\",\n  \"variables\": {\n    \"input\": {\n      \"habitId\": \"h21\",\n      \"source\": \"api\",\n      \"note\": \"GraphQL test completion\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    }
  ]
}
