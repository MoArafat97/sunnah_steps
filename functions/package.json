{
  "name": "sunnah-steps-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Sunnah Steps app",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "seed:sunnah": "npm run build && node lib/scripts/seed.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "apollo-server-express": "^3.12.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.1.1",
    "graphql": "^16.9.0",
    "graphql-tools": "^9.0.1",
    "helmet": "^8.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.2",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "private": true
}
